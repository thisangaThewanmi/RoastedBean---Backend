generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Staff {
  id      Int     @id @default(autoincrement()) // Auto-incremented primary key
  name    String
  email   String  @unique
  address String
  phone   String
  role    String
  active  Boolean @default(true) // Defaults to true (active)
}
